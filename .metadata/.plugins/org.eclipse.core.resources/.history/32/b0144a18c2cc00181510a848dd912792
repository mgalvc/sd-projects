#include "altera_avalon_pio_regs.h"
//#include "io.h"
#include "system.h"
#include "sys/alt_stdio.h"

void enable(int instruction) {
	// set enable to 1
	ALT_CI_LCD_DRIVER(instruction ^ 0x1);
	usleep(200);
	// set enable to 0
	ALT_CI_LCD_DRIVER(instruction ^ 0x1);
}

