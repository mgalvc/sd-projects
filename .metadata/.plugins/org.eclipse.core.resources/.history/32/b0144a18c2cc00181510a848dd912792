void init_lcd() {
	// function set 3x - 00110000
	ALT_CI_LCD_DRIVER(0xC0);
	enable(0xC0);
	usleep(4100);
	ALT_CI_LCD_DRIVER(0xC0);
	enable(0xC0);
	usleep(100);
	ALT_CI_LCD_DRIVER(0xC0);
	enable(0xC0);
	usleep(100);

	// real function set - 00111000
	ALT_CI_LCD_DRIVER(0xC0);
	enable(0xC0);
	usleep(100);

	// display on/off - 00001000
	ALT_CI_LCD_DRIVER(0x20);
	enable(0x20);
	usleep(100);

	clear_display();

	// entry mode - 00000110
	ALT_CI_LCD_DRIVER(0x18);
	enable(0x18);
	usleep(100);

	// display on/off - 00001110 - cursor appears and doesn't blinks
	ALT_CI_LCD_DRIVER(0x38);
	enable(0x38);
	usleep(100);

	// send some data to test - 00000001
	ALT_CI_LCD_DRIVER(0x6);
	enable(0x6);
	usleep(100);
}

int main() {
	int outputs[] = {15, 23, 27, 29, 30};
	char lcd_options[][9] = {
			"1 - LED A",
			"2 - LED B",
			"3 - LED C",
			"4 - LED D",
			"5 - LED E"
	};
	int i = 0;
	int previous_i;
	int selected = 0;

	init_lcd();

	return 0;
}
